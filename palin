import java.util.*;
class plain{
public static void main(String args[]) {
Scanner sc=new Scanner(System.in);
String s,rev="";
int i , l;
System.out.println("Enter String: ");
s = sc.next();
l = s.length();
for(i=l-1 ; i>=0 ;i--) {
rev =rev+s.charAt(i);
}
if(s.equals(rev)) { //equalsIgnoreCase
System.out.println(s + " is a palindrome word");
System.out.println(rev);
}
else {
System.out.println(s +" is not a pw");
System.out.println(rev);
}
}
}
